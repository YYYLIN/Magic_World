#version 400  

in vec2 TexCoord;
in vec4 LightPos;
in vec3 OutNormal;

out vec4 gl_FragColor; 

uniform sampler2D sampler0;
uniform sampler2D shadowMap;
uniform vec4 AmbientColor;



void main()  
{
    vec4 TexColor = texture2D(sampler0, TexCoord);

    gl_FragColor = TexColor * AmbientColor;  
}  